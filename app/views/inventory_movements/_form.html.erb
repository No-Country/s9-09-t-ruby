<%= simple_form_for inventory_movement, url: inventory_movements_path(inventory_item_id: inventory_item.id, movement_type: movement_type), wrapper: :vertical_custom_form, html: { class: "d-flex align-items-center gap-2" } do |f| %>

  <%= f.input :movement_type, as: :hidden, value: movement_type %>
  <%= f.input :quantity, label: false, placeholder: "Cantidad", class: "form-control", input_html: { autofocus: true }, wrapper_html: { class: "mb-0" } %>

  <%= button_tag type: 'submit', class: "btn btn-primary" do %>
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-lg" viewBox="0 0 16 16">
      <path d="M12.736 3.97a.733.733 0 0 1 1.047 0c.286.289.29.756.01 1.05L7.88 12.01a.733.733 0 0 1-1.065.02L3.217 8.384a.757.757 0 0 1 0-1.06.733.733 0 0 1 1.047 0l3.052 3.093 5.4-6.425a.247.247 0 0 1 .02-.022Z"/>
    </svg>
  <% end %>
  <%= link_to "/#{inventory_item.inventoriable_type.pluralize.downcase}", class: "btn btn-danger" do %>
    <i class="bi bi-x-lg"></i>
  <% end %>
<% end %>
