<%= turbo_frame_tag general_configuration do %>
  <div class="d-flex flex-column rounded bg-white shadow mb-2 px-4 py-2">
    <div class="header d-flex align-items-center justify-content-between">
      <h5>Configuraciones generales</h5>
      <%= button_to edit_general_configuration_path(general_configuration), class: "btn btn-primary", method: :get, data: { turbo_frame: "remote_modal" } do %>
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
        <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z"/>
      </svg>
      <% end %>
    </div>
    <div class="overflow-scroll">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Eficiencia de extraccion</th>
            <th scope="col">Porcentaje de evaporacion en coccion</th>
            <th scope="col">Tiempo de coccion</th>
            <th scope="col">Tiempo de maceracion</th>
            <th scope="col">Perdida en temperatura</th>
            <th scope="col">Temperatura de grano</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= general_configuration.efficiency_extract %> %</td>
            <td><%= general_configuration.evaporation_percentage %> %</td>
            <td><%= general_configuration.bioling_time %> min</td>
            <td><%= general_configuration.mashing_time %> min</td>
            <td><%= general_configuration.loss_temp %> 째C</td>
            <td><%= general_configuration.grain_temp %> 째C</td>
          </tr>
          <tr>
            <th scope="col">Relacion de empaste</th>
            <th scope="col">Temperatura de maceracion</th>
            <th scope="col">Temperatura de lavado</th>
            <th scope="col">Tiempo de lavado</th>
            <th scope="col">Tiempo de enfriado</th>
            <th scope="col">Pedida por turviedad</th>
          </tr>
          <tr>
            <td><%= general_configuration.water_grain_ratio %> L/Kg</td>
            <td><%= general_configuration.mashing_temp %> 째C</td>
            <td><%= general_configuration.sparging_temp %> 째C</td>
            <td><%= general_configuration.sparging_time %> min</td>
            <td><%= general_configuration.chilling_time %> min</td>
            <td><%= general_configuration.turbiduty_loss %> L</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
<% end %>
