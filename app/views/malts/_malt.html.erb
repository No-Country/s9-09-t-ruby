<%= turbo_frame_tag malt do %>
  <div class="accordion accordion-flush mb-2">
    <div class="accordion-item d-flex py-2 px-2 align-items-center border rounded shadow-sm bg-white">
      <div class="col"><%= malt.name %></div>
      <div class="d-none d-md-block col"><%= malt.extract %></div>
      <div class="d-none d-md-block col"><%= malt.color %></div>
      <div class="d-none d-md-block col"><%= malt.ph %></div>
      <div class="col d-flex align-items-center gap-3">
        <div>180 Kg</div>
        <%= button_to "#", class: "btn btn-success" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-lg" viewBox="0 0 16 16">
          <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2Z"/>
        </svg>
        <% end %>
      </div>
      <div class="col d-flex align-items-center justify-content-center gap-2">
        <%= button_to edit_malt_path(malt), class: "btn btn-primary", method: :get, data: { turbo_frame: "remote_modal" } do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
          <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z"/>
        </svg>
        <% end %>
        <%= button_to malt_path(malt), method: :delete, data: { turbo_confirm: "Esta seguro?" }, class: "btn btn-danger" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
          <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/>
        </svg>
        <% end %>
      </div>
      <div class="col-1">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#<%= dom_id(malt) %>_description" aria-expanded="false" aria-controls="flush-collapseOne"></button>
      </div>
    </div>
    <div id="<%= dom_id(malt) %>_description" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
      <div class="accordion-body bg-white mb-2">
        <table class="table d-md-none">
          <thead>
            <tr>
              <th scope="col">EXTRACTO</th>
              <th scope="col">COLOR</th>
              <th scope="col">PH</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= malt.extract %></td>
              <td><%= malt.color %></td>
              <td><%= malt.ph %></td>
            </tr>
          </tbody>
        </table>
        <h6>DESCRIPCION</h6>
        <p class="text-muted">
          <%= malt.description %>
        </p>
      </div>
    </div>
  </div>
<% end %>
