<%= simple_form_for yeast do |f| %>
  <%= form_error_notification(yeast) %>

  <%= f.input :name, label: "Nombre", class: "form-control", input_html: { autofocus: true } %>
  <%= f.input :description, label: "Descripcion", class: "form-control" %>
  <%= f.input :dosage, label: "Dosis gr/hl", class: "form-control" %>
  <%= f.input :yeast_type, as: :select, collection: Yeast.yeast_types, value_method: -> (r) { r[0] } %>

  <%= f.submit "Crear Malta", class: "btn btn-success" %>
<% end %>
