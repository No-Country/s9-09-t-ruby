<div class="container">
  <div class="header d-flex align-items-center justify-content-between pt-4">
    <h1>Recetas</h1>
    <%= button_to "Nueva receta", new_recipe_path, class: "btn btn-primary", method: :get, data: { turbo_frame: dom_id(Recipe.new) } %>
  </div>

  <%= turbo_frame_tag Recipe.new %>

  <%= turbo_frame_tag "recipes" do %>
    <%= render @recipes %>
  <% end %>
</div>
