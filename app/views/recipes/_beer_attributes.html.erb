<div class="recipe__section">
  <div class="recipe__title">
    Caracteristicas
  </div>
  <div class="d-flex flex-column">
    <strong>COLOR</strong>
    <div class="recipe__srm-color srm-color__<%= recipe.srm.round.to_s %>">
      <strong>
        <%= recipe.srm.round%>
      </strong>
    </div>
    <table class="table">
      <tbody>
        <!-- if controller is :recipes shows this -->
        <% if controller_name == "recipes" %>
          <tr>
            <th scope="row">VOLUMEN (L)</th>
            <td><%= recipe.batch %></td>
          </tr>
          <tr>
            <th scope="row">EXTRACTO REAL(kg)</th>
            <td><%= recipe.real_extract.round(1) %></td>
          </tr>
        <% end %>
        <tr>
          <th scope="row">OG</th>
          <td><%= recipe.computed_og %></td>
        </tr>
        <tr>
          <th scope="row">FG</th>
          <td><%= recipe.computed_fg %></td>
        </tr>
        <tr>
          <th scope="row">ABV</th>
          <td><%= recipe.computed_abv.round(1) %> %</td>
        </tr>
        <tr>
          <th scope="row">IBU</th>
          <td><%= recipe.total_ibus.round(1) %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
